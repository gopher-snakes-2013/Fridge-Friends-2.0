<!DOCTYPE html>
<html>
<head>
  <title>FridgeFriends20</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= link_to 'logout', sign_out_path, method: 'delete' %>
  <% end %>

  <div id="flash">
    <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>
  <%= yield %>

</body>
</html>
